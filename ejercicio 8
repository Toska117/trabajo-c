#include <iostream>

using namespace std;

int main() {
	int notauno;
	int notados;
	int notatres;
	int nota;
	
	cout<<"Ingrese la primera nota \n";
    cin>>notauno;
    
    cout<<"Ingrese la segunda nota \n";
    cin>>notados;
    
    	cout<<"Ingrese la tercera nota \n";
    cin>>notatres;
    
    cout<<"Su nota final es: ";
	nota = notauno*0.3 + notados*0.3 + notatres*0.4;
	cout<<nota;
	
}
